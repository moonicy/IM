<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/custom.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/tempusdominus-bootstrap-4.min.css" />

    <title>ИМ</title>
</head>
<body>

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-users"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
                            Сотрудники
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/laptop">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-cart"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
                            Ноутбуки
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-bar-chart-2"><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></svg>
                            Статусы
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4"><div class="chartjs-size-monitor" style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Учет ноутбуков</h1>
            </div>

            <form>
                <div class="form-row align-items-center">
                    <div class="col-sm-3 my-1">
                        <label for="filter_laptop_number" class="col-form-label-sm">Номер:</label>
                        <input type="text" class="form-control" id="filter_laptop_number">
                    </div>
                    <div class="col-sm-3 my-1">
                        <label for="laptopFirm" class="col-form-label-sm">Фирма:</label>
                        <select class="form-control form-control-sm" id="laptopFirm">
                        	<option></option>
                            <option>HP</option>
                            <option>TOSHIBA</option>
                            <option>MSI</option>
                            <option>Lenovo</option>
                        </select>
                    </div>
                    <div class="col-sm-3 my-1">
                        <label for="laptopStatus" class="col-form-label-sm">Статус:</label>
                        <select class="form-control form-control-sm" id="laptopStatus">
                            <option value=""></option>
                            <option value="На складе">На складе</option>
                            <option value="В работе">В работе</option>
                            <option value="В ремонте">В ремонте</option>
                        </select>
                    </div>
                    <div class="col-sm-3 my-1">
                        <label for="employee_fio" class="col-form-label-sm">Ответственный:</label>
                        <select class="form-control form-control-sm" id="employee_fio">
                            <option></option>
                            {% for employee in employees %}
                                <option value="{{ employee.fio }}">{{ employee.fio }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-row align-items-center">
                    <div class="col-sm-3 my-1">
                        <legend class="col-form-label col-sm-2 pt-0">Состояние:</legend>
						<div class="col-sm-10">
							<div class="form-check">
								<input class="form-check-input" type="checkbox" name="gridRadios" id="relevant">
								<label class="form-check-label" for="relevant">Актуальные</label>
							</div>
							<div class="form-check">
								<input class="form-check-input" type="checkbox" name="gridRadios" id="outdated">
								<label class="form-check-label" for="outdated">Устаревшие</label>
							</div>
						</div>
                    </div>
                    <div class="col-sm-3 my-1">
                        <label for="filter_date_start" class="col-form-label-sm">Дата назначения</label>
                        <div class="input-group">
                            <input type="text" class="form-control datetimepicker-input" id="filter_date_start" data-toggle="datetimepicker" data-target="#filter_date_start"/>
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" id="clear_filter_date_start"><i class="fas fa-backspace"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 my-1">
                        <label for="filter_date_end" class="col-form-label-sm">Дата сдачи</label>
                        <div class="input-group">
                            <input type="text" class="form-control datetimepicker-input" id="filter_date_end" data-toggle="datetimepicker" data-target="#filter_date_end"/>
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" id="clear_filter_date_end"><i class="fas fa-backspace"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3 my-1">
                    <button type="button" class="btn btn-primary" data-tooltip="tooltip" data-placement="bottom" title="Фильтровать" id="search">
                        <i class="fas fa-search"></i>
                    </button>
                    <button type="button" class="btn btn-secondary" data-tooltip="tooltip" data-placement="bottom" title="Сбросить фильтры" id="filter-clear">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </div>
            </form>

            <h2>
                {% if laptop is defined %}
                    Статус ноутбука {{ laptop.number }} [{{ laptop.firm }} / {{ laptop.model }}]
                {% else %}
                    Статусы
                {% endif %}
            </h2>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>Инв. номер</th>
                        <th>Ноутбука</th>
                        <th>Ответственный</th>
                        <th>Статус</th>
                        <th>Дата назначения</th>
                        <th>Дата сдачи</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody id="laptop-table">
                    {% for status in statuses %}
                        <tr data-status-id="{{ status.id }}">
                        	<td data-status-field="number">{{ status.laptop.number }}</td>
                        	<td data-status-field="firm" {% if laptop is defined %}data-laptop-id="{{ laptop.id }}"{% endif %}>{{ status.laptop.firm }} / {{ status.laptop.model }}</td>
                            <td data-status-field="employee" data-employee-id="{{ status.employee.id }}">{{ status.employee.fio }} / {{ status.employee.position }}</td>
                            <td data-status-field="status">{{ status.status }}</td>
                            <td data-status-field="dateStart">{{ status.dateStart|date('Y-m-d') }}</td>
                            <td data-status-field="dateEnd">{% if null != status.dateEnd %}{{ status.dateEnd|date('Y-m-d') }}{% endif %}</td>
                            <td>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editStatus" onclick="currentEdit({{ status.id }}, {{ status.laptop.id }})">
                                    <i class="fas fa-pencil-alt"></i>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% if pagination.isShow %}
                    <div class="d-flex justify-content-md-center flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                {% if pagination.previous is defined %}<li class="page-item"><a class="page-link" href="#" onclick="pagination(0)">First</a></li>{% endif %}
                                {% if pagination.previous is defined %}<li class="page-item"><a class="page-link" href="#" onclick="pagination({{ pagination.previous }})">Previous</a></li>{% endif %}
                                {% if pagination.current - 3 > 0 %}<li class="page-item"><a class="page-link" href="#" onclick="pagination({{ (pagination.current - 4) * pagination.limit }})">{{ pagination.current - 3 }}</a></li>{% endif %}
                                {% if pagination.current - 2 > 0 %}<li class="page-item"><a class="page-link" href="#" onclick="pagination({{ (pagination.current - 3) * pagination.limit }})">{{ pagination.current - 2 }}</a></li>{% endif %}
                                {% if pagination.current - 1 > 0 %}<li class="page-item"><a class="page-link" href="#" onclick="pagination({{ (pagination.current - 2) * pagination.limit }})">{{ pagination.current - 1 }}</a></li>{% endif %}
                                <li class="page-item"><a class="page-link">{{ pagination.current }}</a></li>
                                {% if pagination.current + 1 <= pagination.pages %}<li class="page-item"><a class="page-link" href="#" onclick="pagination({{ (pagination.current) * pagination.limit }})">{{ pagination.current + 1 }}</a></li>{% endif %}
                                {% if pagination.current + 2 <= pagination.pages %}<li class="page-item"><a class="page-link" href="#" onclick="pagination({{ (pagination.current + 1) * pagination.limit }})">{{ pagination.current + 2 }}</a></li>{% endif %}
                                {% if pagination.current + 3 <= pagination.pages %}<li class="page-item"><a class="page-link" href="#" onclick="pagination({{ (pagination.current + 2) * pagination.limit }})">{{ pagination.current + 3 }}</a></li>{% endif %}
                                {% if pagination.next is defined %}<li class="page-item"><a class="page-link" href="#" onclick="pagination({{ pagination.next }})">Next</a></li>{% endif %}
                                {% if pagination.current != pagination.pages %}<li class="page-item"><a class="page-link" href="#" onclick="pagination({{ (pagination.pages - 1) * pagination.limit }})">Last</a></li>{% endif %}
                            </ul>
                        </nav>
                    </div>
                {% endif %}
            </div>
        </main>
    </div>
    <div class="row justify-content-md-center align-items-start border-top">
        <p class="text-monospace">Сделано студенткой группы з96э Краснощёковой Людмилой Михайловной</p>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addStatus" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Добавление</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">

                    <label for="save_employee">Ответственный</label>
                    <select class="form-control form-control-lg" id="save_employee">
                        {% for employee in employees %}
                            <option value="{{ employee.id }}">{{ employee.fio }} / {{ employee.position }}</option>
                        {% endfor %}
                    </select>

                    <label for="save_status">Ответственный</label>
                    <select class="form-control form-control-lg" id="save_status">
                        <option value=""></option>
                        <option value="На складе">На складе</option>
                        <option value="В работе">В работе</option>
                        <option value="В ремонте">В ремонте</option>
                    </select>

                    <label for="save_date_start">Дата назначения</label>
                    <input type="text" class="form-control datetimepicker-input" id="save_date_start" data-toggle="datetimepicker" data-target="#save_date_start"/>
                    <label for="save_date_end">Дата сдачи</label>
                    <input type="text" class="form-control datetimepicker-input" id="save_date_end" data-toggle="datetimepicker" data-target="#save_date_end"/>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                <button id="status_save_button" type="button" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editStatus" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Изменение</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="edit_employee">Ответственный</label>
                    <select class="form-control form-control-lg" id="edit_employee">
                        {% for employee in employees %}
                            <option value="{{ employee.id }}">{{ employee.fio }} / {{ employee.position }}</option>
                        {% endfor %}
                    </select>

                    <label for="edit_status">Статус</label>
                    <select class="form-control form-control-lg" id="edit_status">
                        <option value=""></option>
                        <option value="На складе">На складе</option>
                        <option value="В работе">В работе</option>
                        <option value="В ремонте">В ремонте</option>
                    </select>

                    <label for="edit_date_start">Дата назначения</label>
                    <input type="text" class="form-control datetimepicker-input" id="edit_date_start" data-toggle="datetimepicker" data-target="#edit_date_start"/>
                    <label for="edit_date_end">Дата сдачи</label>
                    <input type="text" class="form-control datetimepicker-input" id="edit_date_end" data-toggle="datetimepicker" data-target="#edit_date_end"/>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отменить</button>
                <button id="status_edit_button" type="button" class="btn btn-primary">Сохранить изменения</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/jquery-3.4.1.min.js"></script>
<script src="/js/bootstrap.bundle.js"></script>
<script src="/js/moment.js"></script>
<script src="/js/tempusdominus-bootstrap-4.min.js"></script>
<script src="/js/common.js"></script>
<script src="/js//custom.status.js"></script>
<script>
    {% if laptop is defined %}
        var currentLaptop = {{ laptop.id }};
    {% else %}
        var currentLaptop = null;
    {% endif %}
</script>
</body>
</html>